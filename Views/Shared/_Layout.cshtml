<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AdminLTE</title>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free/css/all.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars/css/OverlayScrollbars.min.css">

    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">


</head>

<style>
/* Besarin switch tanpa ganggu icon */
.custom-control.custom-switch {
    transform: scale(1.4);
    transform-origin: center left;
}

/* Default icon style (moon) */
#modeIcon.fa-moon {
    font-size: 1.1rem;
    color:  #3498db; /* biru terang */
}

/* Saat ikon jadi sun */
#modeIcon.fa-sun {
    color: #f1c40f; /* kuning terang */
}

</style>


<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-flex align-items-center px-2" style="gap: 20px;">
                <i id="modeIcon" class="fas fa-moon" style="font-size: 1.4rem; margin-top: 2px;"></i>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="darkModeToggle" onchange="toggleDarkMode()">
                    <label class="custom-control-label" for="darkModeToggle"></label>
                </div>
            </li>
        </ul>
    </nav>
</div>
    <!-- Sidebar -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <div class="sidebar d-flex flex-column justify-content-center align-items-center" style="height: 100%;">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column text-center" data-widget="treeview" role="menu">
                <li class="nav-item mb-4">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-user fa-2x"></i>
                        <span class="brand-text font-weight-light">AdminLTE</span>
                    </a>
                </li>
               <li class="nav-item">
                    <a asp-controller="FillingPoints" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-gas-pump"></i>
                        <p>Filling Points</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <p>Charts</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-table"></i>
                        <p>Tables</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>


    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <section class="content pt-3">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="main-footer text-center">
        <strong>AdminLTE + ASP.NET Core</strong>
    </footer>

</div>
<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/overlayscrollbars/js/OverlayScrollbars.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>


<script>
  function toggleDarkMode() {
  document.body.classList.toggle("dark-mode");

  const isDark = document.body.classList.contains("dark-mode");
  const icon = document.getElementById("modeIcon");

  icon.classList.remove("fa-moon", "fa-sun");
  icon.classList.add(isDark ? "fa-sun" : "fa-moon");

  localStorage.setItem("theme", isDark ? "dark" : "light");
}

window.onload = function () {
  const savedTheme = localStorage.getItem("theme");
  const icon = document.getElementById("modeIcon");

  if (savedTheme === "dark") {
    document.body.classList.add("dark-mode");
    icon.classList.remove("fa-moon");
    icon.classList.add("fa-sun");
    document.getElementById("darkModeToggle").checked = true;
  }
};
</script>




