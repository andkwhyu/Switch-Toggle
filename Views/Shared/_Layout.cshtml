<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AdminLTE</title>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free/css/all.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars/css/OverlayScrollbars.min.css">

    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">


</head>

<style>
/* Besarin switch tanpa ganggu icon */
.custom-control.custom-switch {
    transform: scale(1.4);
    transform-origin: center left;
}

/* Default icon style (moon) */
#modeIcon.fa-moon {
    font-size: 1.1rem;
    color:  #3498db; /* biru terang */
}

/* Saat ikon jadi sun */
#modeIcon.fa-sun {
    color: #f1c40f; /* kuning terang */
}

/* Light mode */
.main-sidebar.sidebar-light-primary .nav-link {
  color: #000 !important;
}

/* Dark mode */
body.dark-mode .main-sidebar.sidebar-dark-primary .nav-link {
  color: #fff !important;
}

.nav-sidebar .nav-link {
  text-align: left !important;
  justify-content: flex-start !important;
}

.nav-sidebar .nav-icon {
  margin-right: 10px;
}

/* Saat sidebar collapse, center-kan icon user di brand-link */
.sidebar-mini.sidebar-collapse .brand-link {
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  height: 48px !important;
  padding: 0 !important;
}

/* Sembunyikan teks AdminLTE saat collapse */
.sidebar-mini.sidebar-collapse .brand-link .brand-text {
  display: none !important;
}

/* Pastikan icon user center dan proporsional */
.sidebar-mini.sidebar-collapse .brand-link i {
  font-size: 22px !important;
  margin: 0 !important;
  text-align: left;
}

body.dark-mode .dataTables_length select {
  background-color: #343a40;
  color: #f8f9fa;
}

</style>


<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-flex align-items-center px-2" style="gap: 20px;">
                <i id="modeIcon" class="fas fa-moon" style="font-size: 1.4rem; margin-top: 2px;"></i>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="darkModeToggle" onchange="toggleDarkMode()">
                    <label class="custom-control-label" for="darkModeToggle"></label>
                </div>
            </li>
        </ul>
    </nav>
</div>
    <!-- Sidebar -->
<aside class="main-sidebar sidebar-light-primary elevation-4">
    <div class="sidebar d-flex flex-column justify-content-center align-items-center" style="height: 100%;">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column text-center" data-widget="treeview" role="menu">
                <li class="nav-item mb-4">
                    <a href="/" class="brand-link text-center">
                        <i class="fas fa-user"></i>
                        <span class="brand-text font-weight-light">AdminLTE</span>
                    </a>
                </li>
               <li class="nav-item">
                    <a asp-controller="FillingPoints" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-gas-pump"></i>
                        <p>Filling Points</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>


    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <section class="content pt-3">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="main-footer text-center">
        <strong>IzzYIzzY</strong>
    </footer>

</div>
<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/overlayscrollbars/js/OverlayScrollbars.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>


<!-- DataTables JS & CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

@RenderSection("Scripts", required: false)

</body>
</html>


<script>
function toggleDarkMode() {
  document.body.classList.toggle("dark-mode");

  const isDark = document.body.classList.contains("dark-mode");
  const icon = document.getElementById("modeIcon");
  const navbar = document.querySelector(".main-header");
  const sidebar = document.querySelector(".main-sidebar");

  // Icon toggle
  icon.classList.remove("fa-moon", "fa-sun");
  icon.classList.add(isDark ? "fa-sun" : "fa-moon");

  // Navbar switch
  if (isDark) {
    navbar.classList.remove("navbar-light", "bg-light");
    navbar.classList.add("navbar-dark", "bg-dark");
  } else {
    navbar.classList.remove("navbar-dark", "bg-dark");
    navbar.classList.add("navbar-light", "bg-light");
  }

  // Sidebar switch
  if (isDark) {
    sidebar.classList.remove("sidebar-light-primary");
    sidebar.classList.add("sidebar-dark-primary");
  } else {
    sidebar.classList.remove("sidebar-dark-primary");
    sidebar.classList.add("sidebar-light-primary");
  }

  localStorage.setItem("theme", isDark ? "dark" : "light");
}

window.onload = function () {
  const savedTheme = localStorage.getItem("theme");
  const icon = document.getElementById("modeIcon");
  const navbar = document.querySelector(".main-header");
  const sidebar = document.querySelector(".main-sidebar");

  if (savedTheme === "dark") {
    document.body.classList.add("dark-mode");
    icon.classList.remove("fa-moon");
    icon.classList.add("fa-sun");
    document.getElementById("darkModeToggle").checked = true;

    navbar.classList.remove("navbar-light", "bg-light");
    navbar.classList.add("navbar-dark", "bg-dark");

    sidebar.classList.remove("sidebar-light-primary");
    sidebar.classList.add("sidebar-dark-primary");
  } else {
    navbar.classList.remove("navbar-dark", "bg-dark");
    navbar.classList.add("navbar-light", "bg-light");

    sidebar.classList.remove("sidebar-dark-primary");
    sidebar.classList.add("sidebar-light-primary");
  }
};
</script>



